@{
    ViewData["Title"] = "Home Page";
}

<div class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="..." alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Third slide">
    </div>
  </div>
</div>

<div class="container mt-4">
  <h2>Latest Blog Posts</h2>
  <!-- You would normally load these from your database -->
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Blog post 1</h5>
          <p class="card-text">Some quick example text to build on the blog post and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Read More</a>
        </div>
      </div>
    </div>
    <!-- Repeat for more blog posts -->
  </div>

  <h2 class="mt-4">Featured Products</h2>
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Product 1</h5>
          <p class="card-text">Some quick example text to build on the product name and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Buy Now</a>
        </div>
      </div>
    </div>
    <!-- Repeat for more products -->
  </div>
</div>
