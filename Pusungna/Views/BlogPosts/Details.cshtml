@model Pusungna.Models.BlogPost

<h2>@Model.Title</h2>

<p>
    <strong>Author:</strong> @Model.Author <br />
    <strong>Published on:</strong> @Model.PublishDate.ToString("MMMM dd, yyyy")
</p>

<p>@Model.Content</p>

<a asp-action="Edit" asp-route-id="@Model.BlogPostId" class="btn btn-primary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.BlogPostId" class="btn btn-danger">Delete</a>
